<resources>
	<!-- 
	Theme.AppCompat->dark activity,dark app bar;
	Theme.AppCompat.Light->light activity,light app bar;
	Theme.AppCompat.Light.DarkActionBar->light activity,dark action bar 
	
	-->
    <!-- 默认Activity主题 -->
    <style name="ActivityDefaultTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_colorPrimary</item>
        <item name="colorPrimaryDark">@color/default_colorPrimaryDark</item>
        <item name="colorAccent">@color/default_colorAccent</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:windowIsTranslucent">false</item> 
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <item name="appBackgroundColor">@color/White</item>
        <item name="appBackgroundColorDark">@color/default_appBackgroundColorDark</item>
        <item name="appBackgroundDrawable">@null</item>
        <item name="appBackgroundDrawableDark">@null</item>
        <item name="appPrimaryColor">@color/default_appPrimaryColor</item>
        <item name="appPrimaryColorDark">@color/default_appPrimaryColorDark</item>
        <item name="appPrimaryDrawable">@null</item>
        <item name="appPrimaryDrawableDark">@null</item>
        <item name="appSecondaryColor">@color/default_appSecondaryColor</item>
        <item name="appSecondaryColorDark">@color/default_appSecondaryColorDark</item>
        <item name="appSecondaryDrawableDark">@null</item>
        <item name="appAuxiliaryColor">@color/default_appAuxiliaryColor</item>
        <item name="appAuxiliaryColorDark">@color/default_appAuxiliaryColorDark</item>
        <item name="appBorderColor">@color/default_appBorderColor</item>
        <item name="appBorderColorDark">@color/default_appBorderColorDark</item>
        <item name="appShadowColor">@color/default_appShadowColor</item>
        <item name="appShadowColorDark">@color/default_appShadowColorDark</item>
        <item name="appTextPrimaryColor">@color/default_appTextPrimaryColor</item>
        <item name="appTextSecondaryColor">@color/default_appTextSecondaryColor</item>
        <item name="appTextTertiaryColor">@color/default_appTextTertiaryColor</item>
        <item name="appTextPrimaryInverseColor">@color/default_appTextPrimaryInverseColor</item>
        <item name="appTextSecondaryInverseColor">@color/default_appTextSecondaryInverseColor</item>
        <item name="appTextTertiaryInverseColor">@color/default_appTextTertiaryInverseColor</item>
        <item name="appTextCursorColor">@color/default_appTextCursorColor</item>
        <item name="appTextSeletedBacgroundColor">@color/default_appTextSeletedBacgroundColor</item>
        <item name="appTextSeletedColor">@color/default_appTextSeletedColor</item>
        <item name="appViewSeletedOrPressedColor">@color/default_appViewSeletedOrPressedColor</item>
    </style>
    
    <!-- MD默认夜间色调主题 -->
    <style name="ActivityDefaultThemeDark" parent="ActivityDefaultTheme" />
       
    
    <!-- MD蓝色调主题 -->
    <style name="ActivityMaterialDesignBlueTheme" parent="ActivityDefaultTheme" />
       

    <!-- 保活全透明 -->
    <style name="ActivityOnePxForLiveTheme">
        <item name="android:windowBackground">@color/Trans</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- <item name="android:windowContentOverlay">true</item> -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>
</resources>